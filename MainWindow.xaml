<Window x:Class="U2SnowmanLoopKeegan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U2SnowmanLoopKeegan"
        mc:Ignorable="d"
        Title="Snowman generator" Height="1000" Width="700">
    <Canvas x:Name="Canvas">
        <TextBox 
            x:Name="txbHowManyBalls"
            Height="22" 
            TextWrapping="Wrap" 
            Text="How many snowballs high?" 
            Width="157"
            MaxLines="1"/>
        <Button 
            x:Name="btnGo"
            Content="Make me a snowman please" 
            Width="157" 
            Canvas.Top="27"
            Click="btnGo_Click"/>

    </Canvas>
</Window>
